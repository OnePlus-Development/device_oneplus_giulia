<resources>

    <!-- Whether device has an alert slider -->
    <bool name="config_hasAlertSlider" translatable="false">true</bool>

    <!--Define available chargers-->
    <!-- Whether device has VOOC charging support -->
    <bool name="config_hasVoocCharger">true</bool>
    <!-- Whether device has Warp charging support -->
    <bool name="config_hasWarpCharger">true</bool>

    <!-- Path to fast charging status file to detect whether an oem fast charger is active -->
    <!-- For Vooc : -->
    <string name="config_oemFastChargerStatusPath" translatable="false">/sys/class/oplus_chg/battery/voocchg_ing</string>

    <!-- Path to fast charging status file to detect whether an oem fast charger is active -->
    <!-- For Warp : -->
    <string name="config_oemFastChargerStatusPath2" translatable="false">/sys/class/oplus_chg/battery/fast_charge</string>

    <!-- Smart 5G -->
    <bool name="config_supportSmart5G">true</bool>

    <!-- Whether devices suports in-display fingerprint when screen is off -->
    <bool name="config_supportScreenOffUdfps">true</bool>

    <!-- Number of physical SIM slots on the device. This includes both eSIM and pSIM slots, and
         is not necessarily the same as the number of phones/logical modems supported by the device.
         For example, a multi-sim device can have 2 phones/logical modems, but 3 physical slots,
         or a single SIM device can have 1 phones/logical modems, but 2 physical slots (one eSIM
         and one pSIM) -->
    <integer name="config_num_physical_slots">2</integer>
</resources>
